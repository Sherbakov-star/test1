<Window x:Class="Учет_домашних_финансов.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Учет_домашних_финансов"
        mc:Ignorable="d"
        Title="Обновление финансов" Height="132.954" Width="703.864">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Margin="0,0,-0.4,0">Введите пароль:</TextBlock>
        <TextBox x:Name="passwordBox" MinWidth="250" Margin="0,0,-0.4,0" Grid.Row="1"/>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0" Background="#FF6CD943">OK</Button>
            <Button IsCancel="True" MinWidth="60" Background="#FFE02525">Отмена</Button>
        </WrapPanel>

    </Grid>

</Window>
